<h1>Create new task</h1>

<% if notice = flash[:notice] %>
<p class=notice_error margin="2px"><%= notice %></p>
<% end %>

<%= form_for @task do |f| %>
  <%= f.text_field :name, placeholder: "Name" %><br/>
  <%= f.text_field :description, placeholder: "Description" %></br>
  <%= f.text_field :test_command, placeholder: "Command" %><br/>
  <%= f.text_area :test, placeholder: "Test", rows: "10", cols: "50"  %><br/>
  <%= f.submit  %>
<% end  %>
